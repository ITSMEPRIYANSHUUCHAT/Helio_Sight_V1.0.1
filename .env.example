# .env file for SolarDashboard backend
# Place this in backend/config/.env
# WARNING: Keep this file secret! Do not commit to Git.

# Database connection (PostgreSQL/TimescaleDB example)
# Format: postgresql://user:password@host:port/db_name
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/solar_db

# JWT secret key (generate a strong one, e.g., openssl rand -hex 32)
JWT_SECRET_KEY=your-very-secure-random-secret-key-here

# External Solar API credentials (examples; replace with real values)
# For Shinemonitor
SHINEMONITOR_USERNAME=your_shinemonitor_email
SHINEMONITOR_PASSWORD=your_shinemonitor_password
COMPANY_KEY=your_shinemonitor_company_key

# For Solarman
SOLARMAN_APP_ID=your_solarman_app_id
SOLARMAN_APP_SECRET=your_solarman_app_secret
SOLARMAN_PASSWORD_SHA256=your_sha256_hashed_password
SOLARMAN_EMAIL=your_solarman_email

# For Soliscloud
SOLISCLOUD_API_KEY=your_soliscloud_api_key
SOLISCLOUD_API_SECRET=your_soliscloud_api_secret

# Other settings
BATCH_SIZE=100  # For data ingestion batches
ENCRYPTION_KEY=your_encryption_key_here  # If using encryption utilities